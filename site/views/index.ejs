                          <% } %>
                          <span class="precio-desc">$<%- toThousand(product.price - Math.round(product.price / 100 * product.descuento)) %> </span>
                        </div>
                        <div class="button-agregar">
                          <button type="button" class="button-compra"><a href="/products/detail/<%- product.id %>">Agregar</a></button> 
                        </div>
                      </article>
            </section>
            <% }) %>


