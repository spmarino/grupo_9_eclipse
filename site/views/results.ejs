<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head') %>

  <body>
    <!-- Header -->
    <%- include('partials/header') %>
      <!-- /Header -->

      <div class="container-product-list-admin">
        <div class="container-title-result"><h2>Resultado de la Búsqueda : "<%- search %>" </h2></div>
        <% if (products.length === 0) { %>
          <div class="container-title-result"><h2 style="color: red;"> No hay productos que coincidan con esa búsqueda </h2></div>
    
        <% } %>
        
        <div class="container">
          <div class="row productos-conteiner">
            <!--PRODUCTOS 1-->
            <% products.forEach(product=> { %>
              <section class="col-5 col-md-3 col-lg-2 producto-box">
                <a href="/products/detail/<%- product.id %>"><figure class="imagen-producto">
                  <img src="/images/<%- product.image %> " alt="">
                </figure></a>
                <% if (product.free_shipping> 0) { %>
                  <div class="envio-promo"><span>Envio gratis</span></div>
                  <% } %>
                    <% if (product.discount> 0) { %>
                      <div class="descuento"><span>
                          <%- product.discount %> % OFF
                        </span></div>
                      <% } %>
                        <article class="datos-articulo">
                          <h2>
                            <%-product.title%>
                          </h2>
                          <div class="precio">
                            <% if (product.discount> 0) { %>
                              <span class="precio-real">$<%- toThousand(product.price) %> </span>
                              <% } %>
                                <span class="precio-desc">$<%- toThousand(product.price - Math.round(product.price / 100 *
                                    product.discount)) %> </span>
                          </div>
                          <div class="button-agregar">
                            <form action="#" method="GET">
                              <button type="submit" class="button-compra">Agregar</button>
                            </form>
                          </div>
                        </article>
              </section>
              <% }) %>
  
  
          </div>
        </div>

      </div>
      <!-- footer -->
      <%- include('partials/footer') %>
        <!-- /footer -->

        <script src="/javascripts/searchIndex.js"></script>
  </body>

</html>